<footer>
    <button class="left action {{#if isFavoritePage}}red{{/if}}" {{#unless user}}disabled{{/unless}}><a
            href="{{#if isFavoritePage}}/{{else}}/favorite{{/if}}">{{{icon "heart"}}}</a></button>
    <div class="right popup">
        <button class="action" onclick="togglePopup(event)" {{#unless user}}disabled{{/unless}}>
            {{{icon "plus"}}}
        </button>
        <div class="content">
            <div class="header">
                <h1>Neuer Standort</h1>
                <button onclick="togglePopup(event)">{{{icon "plus"}}}</button>
            </div>
            <form action="/create" method="post">
                <input type="text" name="name" placeholder="Name" required />
                <select name="categoryId" required>
                    <option value="" disabled selected>Standort Typ</option>
                    {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <div>
                    <input type="text" name="street" placeholder="Strasse" required />
                    <input type="number" name="houseNumber" placeholder="Nr." required />
                </div>
                <div>
                    <input text="number" name="zipCode" placeholder="PLZ" required />
                    <input type="text" name="place" placeholder="Ort" required />
                </div>
                <input type="text" name="country" placeholder="Land" required />
                <button type="submit">Hinzuf√ºgen</button>
            </form>
        </div>
    </div>
</footer>

<style>
    footer {
        height: 0;
        position: fixed;
        bottom: 0;
        width: 100%;
        color: white;
    }

    footer .left,
    footer .right {
        position: absolute !important;
        bottom: 15px;
        padding: 0;
    }

    footer .left {
        left: 15px;
    }

    footer .right {
        right: 15px;
    }

    footer button.action {
        width: 50px;
        height: 50px;
        padding: 10px;
        border-radius: 50%;
        border: none;
        background-color: #333;
    }

    footer .popup .content {
        right: 0;
    }

    footer .popup.open::after {
        right: 15px;
    }
</style>