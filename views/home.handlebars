{{#each locations}}
{{> card user=../user }}
{{/each}}

<style>
    .card,
    .card .reviews .review {
        padding: 15px;
        gap: 10px;
        display: flex;
        flex-direction: column;
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 10px;
        box-sizing: border-box;
        min-width: 200px;
    }

    .card h1 {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .card .rating {
        display: flex;
        gap: 5px;
        height: 30px;
        border: none;
        background-color: transparent;
    }

    .card .rating>span {
        line-height: 30px;
    }

    .card .rating svg {
        width: 30px;
    }

    @media screen and (max-width: 350px) {
        .card .rating {
            height: 20px;
        }

        .card .rating>span {
            line-height: 20px;
        }

        .card .rating svg {
            width: 20px;
        }
    }

    .card .rating .collapse {
        transition: rotate 250ms ease-in-out;
    }

    .card.open .rating .collapse {
        rotate: 180deg;
    }

    .card .actions {
        flex: 1;
        display: flex;
        justify-content: flex-end;
        align-items: end;
        gap: 15px;
        flex-wrap: wrap-reverse;
    }

    .card .actions .icons {
        flex-grow: 1;
        display: flex;
        justify-content: end;
        align-items: center;
        gap: 15px;
    }

    .card .actions .icons button.icon {
        width: 25px;
        height: 25px;
        border: none;
        background-color: transparent;
    }

    .card .actions .stars {
        flex-direction: row-reverse;
        justify-content: center;
    }

    .card .actions .stars label {
        cursor: pointer;
        width: 30px;
        height: 30px;
        color: #ccc;
    }

    .card .actions .stars input {
        position: absolute;
        z-index: -1;
        opacity: 0;
    }

    .card .actions .stars label:hover,
    .card .actions .stars label:hover~label,
    .card .actions .stars input[type="radio"]:checked+label,
    .card .actions .stars input[type="radio"]:checked+label~label {
        color: gold;
    }

    .card .reviews {
        margin: -15px;
        margin-top: 5px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 250ms ease-in-out;
    }

    .card.open .reviews {
        max-height: 250px;
        overflow-y: auto;
        border-top: 1px solid #ccc;
    }

    .card .reviews .review {
        border-bottom: 1px solid #ccc;
        padding: 15px;
    }
</style>